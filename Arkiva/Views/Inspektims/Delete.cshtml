@model Arkiva.Models.Inspektim

@{
    ViewBag.Title = "Fshi inspektimin e kryer nga " + Model.Emri;
}

<h2>@ViewBag.Title</h2>

@if (Model.Dokumente.Any() == true)
{
    ViewBag.Numri = Model.Dokumente.Count();

    if (ViewBag.Numri > 1)
    {
        ViewBag.Message = "Kujdes! Inspektimi perkates i perket Subjektit " + Model.Subjekt.Emri + " dhe permban " + ViewBag.Numri + " Dokumente. Deshironi te procedoni me zgjedhjen?";
    }
    else
    {
        ViewBag.Message = "Kujdes! Inspektimi perkates i perket Subjektit " + Model.Subjekt.Emri + " dhe permban " + ViewBag.Numri + " Dokument. Deshironi te procedoni me zgjedhjen?";
    }

}

<h3 style="color: red">@ViewBag.Message</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" align="right">
        <input type="submit" value="Fshi" class="btn btn-danger" />
        @Html.ActionLink("Anulo", "Index", new { SubjektId = Model.SubjektId }, new { @class = "btn btn-warning" })
    </div>
}