@model IEnumerable<Arkiva.Models.Inspektim>
@{
    ViewBag.Title = "Inspektime";
    var url = Context.Request.Url;
    string[] tmp = url.ToString().Split('=');

    ArkivaDBContext db = new ArkivaDBContext();

    var tmpp = 0;

    if (tmp[1].Contains("&search"))
    {
        string[] nId = tmp[1].Split('&');
        tmpp = nId[0].AsInt();
    }
    else
    {
        tmpp = tmp[1].AsInt();
    }

    if (db.Subjekt.Any(id => id.Id == tmpp))
    {
        var list = db.Subjekt.Find(tmpp);
        <h4>Subjekti @list.Emri</h4>
    }
    else if (!db.Subjekt.Any(id => id.Id == tmpp))
    {
        Response.Redirect("PageNotFound");
    }

}

<p>
    <div align="right">
        @if (Model.Count() == 0)
        {
            ViewBag.Total2 = "Nuk ka asnjë inspektim të kryer.";
        }
        else
        {
            ViewBag.Total = "Nr total i inspektimeve: " + Model.Count();
        }
        <h4>@ViewBag.Total</h4>
        @Html.ActionLink("Krijo Inspektim", "Create", new { SubjektId = tmpp }, new { @class = "btn btn-success", @style = "font-size: 12px" })
        @Html.ActionLink("Shko te Subjektet", "Index", "Subjekts", null, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>
    @using (Html.BeginForm("Index", "Inspektims", FormMethod.Get))
    {
        <div>
            <p>
                @Html.Hidden("SubjektId")
                @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Kërko Inspektimin", maxlength = "35" }) <br />
                <input type="submit" value="Kërko" class="btn btn-info" style="font-size: 12px"/>
                <div class="text-danger">
                    @ViewBag.Message
                </div> <br />
            </p>
        </div>
    }
</p>
<table class="table table-primary">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emri)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.NrInspektimit)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="~/Assets/folder.png" style="width:40px; height:40px" />
        @Html.ActionLink(item.Emri, "Index", "LlojiDokumentits", new { InspektimId = item.Id }, new { @style = "color: black; font-weight: 700" })
    </td>
    <td>
        @Html.ActionLink("Modifiko", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "font-size: 12px" })
        @Html.ActionLink("Përmbajtja", "Details", new { id = item.Id }, new { @class = "btn btn-info", @style = "font-size: 12px" })
        @Html.ActionLink("Fshi", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "font-size: 12px" })
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.NrInspektimit)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Data)
    </td>
</tr>
    }

</table>
<h5 class="text-danger">@ViewBag.Total2</h5>
