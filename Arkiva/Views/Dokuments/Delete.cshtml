@model Arkiva.Models.Dokument

@{
    ViewBag.Title = "Fshi Dokumentin e perzgjedhur: " + Model.FileName;
    ViewBag.Message = "Kujdes! Ju po fshini dokumentin e Subjektit " + Model.LlojiDokumentit.Inspektim.Subjekt.Emri + " te cilit i perket institucionit Inspektues Shteterore " + Model.LlojiDokumentit.Inspektim.Emri + ". Deshironi te procedoni me zgjedhjen?";
}

<h2>@ViewBag.Title</h2>
<div class="alert alert-success fade in hide" role="alert" id="alertId">
    Dokumenti u fshi me sukses!
</div>
<h4 style="color: red; padding-top: 30px">@ViewBag.Message</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-actions no-color" align="right">
    <input type="submit" value="Fshi" class="btn btn-danger" style="font-size: 12px" onclick="getInputValue()" />
    <script>
        function getInputValue() {
                document.getElementById('alertId').classList.remove('hide')
        }
    </script>
    @Html.ActionLink("Anullo", "Index", new { LlojiDokumentitID = Model.LlojiDokumentitId }, new { @class = "btn btn-warning", @style = "font-size: 12px" })
</div>
}
