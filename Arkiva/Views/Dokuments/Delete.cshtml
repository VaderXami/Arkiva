@model Arkiva.Models.Dokument

@{
    ViewBag.Title = "Fshi Dokumentin!";
    ViewBag.Message = "Kujdes! Ju po fshini dokumentin e Subjektit " + Model.LlojiDokumentit.Inspektim.Subjekt.Emri + " të cilit i përket institucionit Inspektues Shtetëror " + Model.LlojiDokumentit.Inspektim.Emri + ". Dëshironi te procedoni me zgjedhjen?";
}

<h2>@ViewBag.Title</h2>
<h4><img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink("Subjektet e Regjistruara" + "/", "Index", "Subjekts", null, null) <img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink(Model.EmriSubjektit + "/", "Index", "Inspektims", new { SubjektId = Model.LlojiDokumentit.Inspektim.SubjektId }, null) <img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink(Model.EmriInspektuesit + " " + Model.NrInspektuesit + "/", "Index", "LlojiDokumentits", new { InspektimId = Model.LlojiDokumentit.InspektimId }, null) <img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink(Model.EmriLlojitDokumentit + "/", "Index", "Dokuments", new { LlojiDokumentitId = Model.LlojiDokumentitId }, null) <img src="~/Assets/delete.png" style="width: 30px; height: 30px" /> @Model.FileName/</h4>

<div class="alert alert-success fade in hide" role="alert" id="alertId">
    Dokumenti u fshi me sukses!
</div>
<h4 style="color: red; padding-top: 30px">@ViewBag.Message</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" align="right">
        <input type="submit" value="Fshi" class="btn btn-danger" style="font-size: 12px" onclick="getInputValue()" />
        <script>
            function getInputValue() {
                document.getElementById('alertId').classList.remove('hide')
            }
        </script>
        @Html.ActionLink("Anulo", "Index", new { LlojiDokumentitID = Model.LlojiDokumentitId }, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>
}
