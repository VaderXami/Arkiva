<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Arkiva</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #FBE7C6">

    <div class="navbar navbar-inverse navbar navbar-dark bg-dark justify-content-between  fixed-top" style="height: 70px;">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Arkiva", "Index", "Subjekts", new { area = "" }, new { @class = "navbar-brand", @style="font-size: 250%"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 100px">
        @RenderBody()
        <hr />
        <footer style="font-family:'Courier New'; justify-content:center; background-color: black" class="fixed-bottom modal-footer">
            <p style="color:white">&copy; @DateTime.Now.Year - Arkiva Shtetërore by <a href="https://github.com/VaderXami" style="color:white">VaderXami </a></p>
        </footer>
    </div>
    @*Scripts*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
