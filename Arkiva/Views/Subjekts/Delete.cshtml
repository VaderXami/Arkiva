@model Arkiva.Models.Subjekt

@{
    ViewBag.Title = "Fshi Subjektin!";
}

<h2>@ViewBag.Title</h2>
<h4><img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink("Subjektet e Regjistruara" + "/", "Index", "Subjekts", null, null) <img src="~/Assets/delete.png" style="width: 30px; height: 30px"/> @Model.Emri/</h4>

@if (Model.Inspektime.Any() == true)
{
    ViewBag.Numri = Model.Inspektime.Count();

    if (ViewBag.Numri > 1)
    {
        ViewBag.Message = "Kujdes! Ju po fshini Subjektin " + Model.Emri + " i cili përmban " + ViewBag.Numri + " Inspektime" + ". Dëshironi të procedoni me zgjedhjen?";
    }
    else
    {
        ViewBag.Message = "Kujdes! Subjekti përkatës përmban " + ViewBag.Numri + " inspektim.";
    }

}

<h4 style="color: red; padding-top: 30px">@ViewBag.Message</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color" align="right">
        <input type="submit" value="Fshi" class="btn btn-danger" style="font-size: 12px" />
        @Html.ActionLink("Anulo", "Index", null, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>

}