@model Arkiva.Models.Subjekt

@{
    ViewBag.Title = "Përmbajtja";
}

<h4>@ViewBag.Title</h4>
<h4><img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink("Subjektet e Regjistruara" + "/ ", "Index", "Subjekts", null, null) <img src="~/Assets/content.png" style="width: 30px; height: 30px" /> @Model.Emri/</h4>
<div align="right">
    @Html.ActionLink("Shko Pas", "Index", null, new { @class = "btn btn-warning", @style = "font-size: 12px" })
</div>

<div>
    <hr />
    <dl class="dropdown-menu-left">
        <dt style="width: auto">
            @Html.DisplayNameFor(model => model.Emri)
        </dt>

        <dd style="padding-bottom: 20px">
            @Html.DisplayFor(model => model.Emri)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd style="padding-bottom: 20px">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
            <h5 style="font-weight: 700">Nr. Inspektimeve</h5>
        </dt>
        <dd style="padding-bottom: 20px">
            <h5>@Model.Inspektime.Count()</h5>
        </dd>

        <div align="right">
            @if (Model.Inspektime.Any())
            {
                @Html.ActionLink("Shkarko .zip", "DownloadZipFile", new { id = Model.Id }, new { @class = "btn btn-info", @style = "font-size: 12px" })
            }
        </div>
    </dl>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inspektime.FirstOrDefault().Emri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inspektime.FirstOrDefault().NrInspektimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inspektime.FirstOrDefault().Data)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Inspektime)
        {
            <tr>
                <td>
                    <img src="~/Assets/folder.png" style="width: 30px; height: 30px" />
                    @Html.DisplayFor(modelItem => item.Emri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NrInspektimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
            </tr>
        }
    </table>
</div>