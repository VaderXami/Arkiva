@model Arkiva.Models.Subjekt

@{
    ViewBag.Title = "Permbajtja e subjektit " + Model.Emri;
}

<h2>@ViewBag.Title</h2>

<div align="right">
    @Html.ActionLink("Edito", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Shko te Subjektet", "Index", null, new { @class = "btn btn-warning" })
</div>
@Html.ActionLink("Shkarko Zip File", "DownloadZipFile", new { id = Model.Id }, new { @class = "btn btn-info" })
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Emri)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Emri)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Inspektime)
        </dt>
    </dl>
    <table class="table">
        @foreach (var item in Model.Inspektime)
        {
            <tr>
                <td>
                    <img src="~/Assets/folder.png" style="width: 30px; height: 30px" />
                    @Html.DisplayFor(modelItem => item.Emri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
            </tr>
        }
    </table>
</div>