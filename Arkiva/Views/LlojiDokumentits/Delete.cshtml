@model Arkiva.Models.LlojiDokumentit

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Fshi Llojin e Dokumentit!";
}

<h2>@ViewBag.Title</h2>
<h4><img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink("Subjektet e Regjistruara" + "/", "Index", "Subjekts", null, null) <img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink(Model.Inspektim.Subjekt.Emri + "/", "Delete", "Subjekts", new { id = Model.Inspektim.Subjekt.Id }, null) <img src="~/Assets/folder.png" style="width: 30px; height: 30px" /> @Html.ActionLink(Model.Inspektim.Emri + " "  + Model.Inspektim.NrInspektimit + "/", "Delete", "Inspektims", new { id = Model.Inspektim.Id }, null) <img src="~/Assets/delete.png" style="width: 30px; height: 30px" /> @Model.Emri/</h4>

@if (Model.Dokumente.Any() == true)
{
    ViewBag.Numri = Model.Dokumente.Count();

    if (ViewBag.Numri > 1)
    {
        ViewBag.Message = "Kujdes! Lloji i dokumentit përkatës i përket Subjektit " + Model.Inspektim.Subjekt.Emri + " dhe përmban " + ViewBag.Numri + " Dokumente. Dëshironi të procedoni me zgjedhjen?";
    }
    else
    {
        ViewBag.Message = "Kujdes! Inspektimi përkatës i përket Subjektit " + Model.Inspektim.Subjekt.Emri + " dhe përmban " + ViewBag.Numri + " Dokument. Dëshironi të procedoni me zgjedhjen?";
    }

}

<h4 style="color: red; padding-top: 30px">@ViewBag.Message</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" align="right">
        <input type="submit" value="Fshi" class="btn btn-danger"  style = "font-size: 12px"/>
        @Html.ActionLink("Anulo", "Index", new { InspektimId = Model.InspektimId }, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>
}