@model Arkiva.Models.LlojiDokumentit

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Fshi Llojin e Dokumentit!";
}

<h2>@ViewBag.Title</h2>

<h4 style="color: red; padding-top: 30px">A jeni të sigurt që dëshironi të fshini llojin e dokumentit e përzgjedhur?</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" align="right">
        <input type="submit" value="Fshi" class="btn btn-danger"  style = "font-size: 12px"/>
        @Html.ActionLink("Anullo", "Index", new { InspektimId = Model.InspektimId }, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>
}