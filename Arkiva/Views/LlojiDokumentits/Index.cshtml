@model IEnumerable<Arkiva.Models.LlojiDokumentit>

@{
    ViewBag.Title = "Lloji Dokumentit";
    var url = Context.Request.Url;
    string[] tmp = url.ToString().Split('=');

    ArkivaDBContext db = new ArkivaDBContext();

    var tmpp = 0;

    if (tmp[1].Contains("&search"))
    {
        string[] nId = tmp[1].Split('&');
        tmpp = nId[0].AsInt();
    }
    else
    {
        tmpp = tmp[1].AsInt();
    }

    if (db.Inspektim.Any(id => id.Id == tmpp))
    {
        var list = db.Inspektim.Find(tmpp);
        ViewBag.Id = list.SubjektId;
        <h4> Inspektim nga @list.Emri për Subjektin @list.Subjekt.Emri</h4>
        <h4>  @Html.ActionLink(list.Subjekt.Emri + "/", "Index", "Subjekts", null, null)@Html.ActionLink(list.Emri + " " + list.NrInspektimit + "/", "Index", "Inspektims", new { SubjektId = ViewBag.Id }, null)</h4>


    }
    else if (!db.Inspektim.Any(id => id.Id == tmpp))
    {
        Response.Redirect("PageNotFound");
    }
}

<p>
    <div align="right">
        @if (Model.Count() == 0)
        {
            ViewBag.Total2 = "Nuk ka asnjë lloji të krijuar.";
        }
        else
        {
            ViewBag.Total = "Nr total i inspektimeve: " + Model.Count();
        }
        <h4>@ViewBag.Total</h4>
        @Html.ActionLink("Krijo Lloj", "Create", new { InspektimId = tmpp }, new { @class = "btn btn-success", @style = "font-size: 12px" })
        @Html.ActionLink("Shko te Inspektimet", "Index", "Inspektims", new { SubjektId = ViewBag.Id }, new { @class = "btn btn-warning", @style = "font-size: 12px" })
    </div>
    @using (Html.BeginForm("Index", "LlojiDokumentits", FormMethod.Get))
    {
        <div>
            <p>
                @Html.Hidden("InspektimId")
                @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Kerko Lloj Dokumenti", maxlength = "35", @id = "myInput" }) <br />
                <input type="submit" value="Kerko" class="btn btn-info" style="font-size: 12px" />
                <button onclick="document.getElementById('myInput').value = ''" class="btn btn-secondary" style="width: 45px; height: 30px">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                        <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                    </svg>
                </button>
                <div class="text-danger">
                    @ViewBag.Message
                </div> <br />
            </p>
        </div>
    }
</p>
<table class="table table-secondary">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emri)
            </th>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Assets/folder.png" style="width:40px; height:40px" />
                @Html.ActionLink(item.Emri, "Index", "Dokuments", new { LlojiDokumentitId = item.Id }, new { @style = "color: black; font-weight: 700" })
            </td>
            <td style="padding-top: 12px">
                @Html.ActionLink("Modifiko", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "font-size: 12px" })
                @Html.ActionLink("Permbajtja", "Details", new { id = item.Id }, new { @class = "btn btn-info", @style = "font-size: 12px" })
                @Html.ActionLink("Fshi", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "font-size: 12px" })
            </td>
            <td></td>
            <td style="padding-top: 15px; padding-left: 30px">
                @Html.DisplayFor(modelItem => item.Data)
            </td>
        </tr>
    }

</table>
<h5 class="text-danger">@ViewBag.Total2</h5>
